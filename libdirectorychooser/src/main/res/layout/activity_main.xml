<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".view.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onDirBackPress"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        <HorizontalScrollView
            android:id="@+id/hsv_directory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_select_dir"
            android:layout_toRightOf="@+id/img_back"
            android:scrollbars="none">

            <TextView
                android:id="@+id/text_view_directory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Directory"
                android:textColor="#fff" />

        </HorizontalScrollView>


        <ImageView
            android:id="@+id/img_select_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onDirectorySelected"
            android:rotation="90"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_directory"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
